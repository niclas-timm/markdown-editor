{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MDEditor",
  "version": "0.1.0",
  "identifier": "com.niclas.mdeditor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MDEditor",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "backgroundColor": "#1e1e1e"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
